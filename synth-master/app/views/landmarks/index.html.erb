<table class="minimalist">
  <tr>
    <th>Name</th>
		<th>Position</th>
		<th>Type</th>
	<th align="right">Actions</th>
  </tr>

<% @landmarks.each do |landmark| %>
  <tr>
    <td><%=h landmark.landmark_name.first %></td>
    <td><%=h landmark.landmark_position.first %></td>
		<td><%=h ActiveRDF::Namespace.localname(landmark.landmark_navigation_attribute.first.classes.first).gsub('NavigationAttribute','').titleize %></td>
    <td align="right">
 			<%= link_to 'Edit', :action => "edit", :id => landmark %>
	   	<%= link_to 'Remove', { :action => "destroy", :id => landmark }, :confirm => 'Are you sure?', :method => :delete %>
 		</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add landmark', new_landmark_path %>