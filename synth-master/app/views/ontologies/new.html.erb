<h1>Add ontology</h1>

<% form_for :ontology, :url => { :action => "create" }, :html => {  :multipart => true, :class => 'form' } do |f| %>
  <%= f.error_messages %>

  <%= f.label :name %>
  <p>
    <%= f.text_field 'ontology_name' %>
  </p>

	<%= f.label :description %>
  <p>
    <%= f.text_area 'ontology_description', :rows => 2 %>
  </p>

  <%= f.label :file %>
  <p>
		<%= f.file_field 'datafile' %>
  </p>

	<%= f.label :notation %>
  <p>
    <%= f.select 'ontology_file_notation', [ "rdfxml", "n3", "ntriples" ]%>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', :action => :index %>