<h1>Edit effect</h1>

<% form_for :effect, :url => { :action => "update" }, :html => { :class => 'form' } do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag :id, @effect %>
  <%= f.label :name %>
  <p>
    <%= f.text_field :effect_name %>
  </p>

	<%= f.label 'Javascript Code for the effect' %>
	Function prototype: void swui_Effect_<effectName> <br/>(String widgetA, String widgetB, String parameters) 	
	<p>
    <%= f.text_area :effect_jsCode, :cols => 80, :rows => 15 %>
  </p>

	<%= f.label :dependencies %>
	Links to external scripts
	<p>
    <%= f.text_area :effect_dependencies, :cols => 80, :rows => 10 %>
  </p>
	
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<%= link_to 'Back', effects_path %>